<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <stone.tianfeng.com.stonestore.viewutils.CustomScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_product_series"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="top"
                android:layout_weight="0.36"
                android:focusable="true"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@mipmap/banner1" />

            <stone.tianfeng.com.stonestore.viewutils.PullToRefreshView
                android:id="@+id/pull_refresh_view"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:paddingTop="5dp"
                android:orientation="vertical">
                <stone.tianfeng.com.stonestore.viewutils.CustomGridView
                    android:id="@+id/gv_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:horizontalSpacing="5dp"
                    android:numColumns="2"
                    android:verticalSpacing="5dp">

                </stone.tianfeng.com.stonestore.viewutils.CustomGridView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:visibility="gone"
                    android:background="@color/color_line"/>
            </stone.tianfeng.com.stonestore.viewutils.PullToRefreshView>

        </LinearLayout>
    </stone.tianfeng.com.stonestore.viewutils.CustomScrollView>
<stone.tianfeng.com.stonestore.viewutils.xListView.XListView
    android:id="@+id/lv_products"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</stone.tianfeng.com.stonestore.viewutils.xListView.XListView>
    <ImageView
        android:id="@+id/id_ig_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:padding="15dip"
        android:src="@drawable/icon_back_white" />

    <include
        android:id="@+id/tab_main"
        layout="@layout/foot_layout"
        android:visibility="gone"></include>
</RelativeLayout>