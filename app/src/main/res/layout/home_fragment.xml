<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.38"
            android:background="@drawable/img_home_title"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:text="@string/app_version_detail"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/id_ig_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="5dip"
                android:padding="10dip"
                android:src="@drawable/icon_seting" />

            <ImageView
                android:id="@+id/id_ig_stone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dip"
                android:padding="10dip"
                android:src="@drawable/icon_seting"
                android:visibility="gone" />


            <stone.tianfeng.com.stonestore.viewutils.CircleImageView
                android:id="@+id/id_ig_icon"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_setting_down" />


            <TextView
                android:id="@+id/id_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_ig_icon"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dip"
                android:text="小千禧"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_tv_name"
                android:layout_centerInParent="true"
                android:layout_marginTop="7dip"
                android:background="@drawable/frame_bg_red"
                android:text="定制用户"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>


        <FrameLayout
            android:id="@+id/fl_flybanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/white"
            android:orientation="vertical">


            <stone.tianfeng.com.stonestore.viewutils.FlyBanner
                android:id="@+id/flybanner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />


        </FrameLayout>


        <stone.tianfeng.com.stonestore.viewutils.CustomGridView
            android:id="@+id/id_gv_menu"
            style="@style/layout_vertical"
            android:layout_marginTop="15dp"
            android:numColumns="4"
            android:scrollbars="none"
            android:visibility="gone" />

        <stone.tianfeng.com.stonestore.viewutils.CustomGridView
            android:layout_marginTop="4dp"
            android:id="@+id/gv_series"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:verticalSpacing="4dp"
            android:horizontalSpacing="4dp"
            android:numColumns="2"
            android:scrollbars="none" />

        <stone.tianfeng.com.stonestore.viewutils.CustomGridView
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:id="@+id/gv_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:verticalSpacing="4dp"
            android:horizontalSpacing="4dp"
            android:numColumns="1"
            android:scrollbars="none" />
    </LinearLayout>
</ScrollView>