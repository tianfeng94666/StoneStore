<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <stone.tianfeng.com.stonestore.viewutils.SquareImageView
            android:id="@+id/product_img"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />
    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_modelNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin5"
            android:ellipsize="end"
            android:gravity="center"
            android:text="足金金砖"
            android:textColor="@color/text_color"
            android:textSize="@dimen/pt7" />
        <TextView

            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin15"
            android:ellipsize="end"
            android:gravity="center"
            android:text="相伴一生"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/pt8" />
    </LinearLayout>


    <!--风格线-->
    <View
        android:id="@+id/menu_line"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/tv_modelNum"
        android:background="@color/theme_bg" />

    <TextView
        android:id="@+id/tv_descript"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin5"
        android:ellipsize="end"
        android:gravity="center"
        android:text="牵了手，这辈子就注定了相扶到老"
        android:textColor="@color/text_color3"
        android:textSize="@dimen/pt7" />

    <LinearLayout
        android:id="@+id/ll_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin5"
        android:layout_marginLeft="@dimen/margin5"
        android:layout_marginTop="@dimen/margin5"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥ :  "
            android:textColor="@color/text_color"
            android:textSize="@dimen/pt8" />

        <TextView
            android:id="@+id/tv_sum_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="849.90"
            android:textColor="@color/text_color"
            android:textSize="@dimen/pt8" />

    </LinearLayout>

</LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <stone.tianfeng.com.stonestore.viewutils.SquareImageView
                android:id="@+id/product_img2"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop" />
        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin5"
                android:ellipsize="end"
                android:gravity="center"
                android:text="足金金砖"
                android:textColor="@color/text_color"
                android:textSize="@dimen/pt7" />
            <TextView

                android:id="@+id/tv_series_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin15"
                android:ellipsize="end"
                android:gravity="center"
                android:text="相伴一生"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/pt8" />
        </LinearLayout>


        <!--风格线-->
        <View
            android:id="@+id/menu_line2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/tv_modelNum"
            android:background="@color/theme_bg" />

        <TextView
            android:id="@+id/tv_descript2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin5"
            android:ellipsize="end"
            android:gravity="center"
            android:text="牵了手，这辈子就注定了相扶到老"
            android:textColor="@color/text_color3"
            android:textSize="@dimen/pt7" />

        <LinearLayout
            android:id="@+id/ll_price2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin5"
            android:layout_marginLeft="@dimen/margin5"
            android:layout_marginTop="@dimen/margin5"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ :  "
                android:textColor="@color/text_color"
                android:textSize="@dimen/pt8" />

            <TextView
                android:id="@+id/tv_sum_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="849.90"
                android:textColor="@color/text_color"
                android:textSize="@dimen/pt8" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>